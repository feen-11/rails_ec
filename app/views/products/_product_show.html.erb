<div class="row gx-4 gx-lg-5 align-items-center">
  <div class="col-md-6"><%= image_tag product.image, class:'card-img-top mb-5 mb-md-0' %></div>
  <div class="col-md-6">
    <h1 class="display-5 fw-bolder"><%= product.name %></h1>
    <div class="fs-5 mb-5">
      <span><%= product.price %>円</span>
    </div>
    <p class="lead"><%= product.description %></p>
    <div class="d-flex">
      <% if request.path_info.start_with?('/products') %>
        <input class="form-control text-center me-3" id="inputQuantity" type="num" value="1" style="max-width: 3rem" />
        <button class="btn btn-outline-dark flex-shrink-0" type="button">
          <i class="bi-cart-fill me-1"></i>
          カートに入れる
        </button>
      <% end %>
      <% if request.path_info.start_with?('/admin') %>
        <%= link_to '編集', edit_admin_product_path(product), class: 'btn btn-outline-dark mt-auto' %>
      <% end %>
    </div>
  </div>
</div>
