                    <% end %>
                  </ul>
                </div>
              <% end %>
            </div>
          </div>
          <hr class="my-4">
          <%= form.submit '購入する', class: 'w-100 btn btn-primary btn-lg mb-5' %>
        <% end %>
      </div>
    </div>
  </main>
</div>
