<% products.each do |product| %>
  <div class="col mb-5">
    <div class="card h-100">
      <!-- Product image-->
      <%= image_tag product.image, class:'card-img-top' %>
      <!-- Product details-->
      <div class="card-body p-4">
        <div class="text-center">
          <!-- Product name-->
          <h5 class="fw-bolder"><%= product.name %></h5>
          <!-- Product reviews-->
          <div class="d-flex justify-content-center small text-warning mb-2">
            <% product.evaluation.times do %>
              <div class="bi-star-fill"></div>
            <% end %>
          </div>
          <!-- Product price-->
          <%= "#{product.price}円" %>
        </div>
      </div>
      <!-- Product actions-->
      <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
        <div class="text-center">
          <% if request.path_info == '/' %>
            <%= link_to '詳細', product, class: 'btn btn-outline-dark mt-auto' %>
            <%# 0306 404エラーのため要修正。ルーティングを見直す必要？ cart_products/:id(:format)の形にしたい %>
            <%= button_to 'カートに入れる', cart_products_path, data: { "turbo-method": :post }, params:{ cart_product: { product_id: product.id } }, class: 'btn btn-outline-dark mt-auto' %>
          <% end %>
          <% if request.path_info.start_with?('/admin') %>
            <%= link_to '詳細', admin_product_path(product), class: 'btn btn-outline-dark mt-auto' %>
            <%= link_to '編集', edit_admin_product_path(product), class: 'btn btn-outline-dark mt-auto' %>
            <%= link_to '削除', admin_product_path(product), data: { turbo_method: :delete, turbo_confirm: '削除しますか？' }, class: 'btn btn-outline-dark mt-auto' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
