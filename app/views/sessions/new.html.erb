<header class="bg-primary py-5">
  <div class="container px-4 px-lg-5 my-5">
    <div class="text-center text-white">
      <h1 class="display-4 fw-bolder">ログイン</h1>
    </div>
  </div>
</header>
<section class="py-5 container">
  <%= form_with model: @session, url: login_path, data: { turbo_method: :post }, multipart: true, local: true, scope: :session do | form | %>
    <div class="mb-3">
      <%= form.label :name, "ユーザー名", class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control', placeholder: 'ユーザー名を入力してください' %>
    </div>
    <div class="mb-3">
      <%= form.label :password, "パスワード", class: 'form-label' %>
      <%= form.password_field :password, class: 'form-control', placeholder: 'パスワードを入力してください' %>
    </div>
    <%= form.submit 'ログイン', class: 'btn btn-outline-dark' %>
  <% end %>
</section>
